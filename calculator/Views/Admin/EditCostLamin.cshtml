@model calculator.Models.CostLamination

@{
    ViewBag.Title = "Редактировать стоимость ламинации";
}

<h2>Редактировать стоимость ламинации</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
    
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.IdcostLam)

                @Html.HiddenFor(model => model.DensityLamId)  
               @Html.HiddenFor(model => model.FormatPaperId)

        <div class="form-group">
           <div class="col-md-10">
               Стоимость ламинации
                @Html.EditorFor(model => model.CostLam)
                @Html.ValidationMessageFor(model => model.CostLam)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </div>
    </div>
}


