@model IEnumerable<calculator.Models.MyViewModel.ViewCostLam>
@{
    ViewBag.Title = "Стоимость ламинации";
}

<h2>Стоимость ламинации</h2>

<p>
    @Html.ActionLink("Добавить новый тип ламинации", "CreateCostLamin")
</p>
<table class="table">
    <tr>
        <th>
           Тип ламинации
        </th>
        <th>
          Плотность
        </th>
        <th>
            Формат бумаги
        </th>
        <th>
            Стоимость ламинации
        </th>



        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.typeLam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.densityLam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.formatPaper)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.costLam)
            </td>


            <td>
                @Html.ActionLink("Редактировать", "EditCostLamin", new { id = item.id }) |
                @Html.ActionLink("Удалить", "DeleteCostLamin", new { id = item.id }) 
              
            </td>
        </tr>
    }

</table>
