@model calculator.Models.PercenTaxProfit

@{
    ViewBag.Title = "Редактировать процент налога / прибыли";
}

<h2>Редактировать процент налога / прибыли</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
           <div class="col-md-10">
               Налог %
                @Html.EditorFor(model => model.Tax)
                @Html.ValidationMessageFor(model => model.Tax)
            </div>
        </div>

        <div class="form-group">
           <div class="col-md-10">
               Прибыль %
                @Html.EditorFor(model => model.Profit)
                @Html.ValidationMessageFor(model => model.Profit)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </div>
    </div>
}
