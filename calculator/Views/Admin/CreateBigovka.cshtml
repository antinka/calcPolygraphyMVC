@model calculator.Models.Bigovka

@{
    ViewBag.Title = "Создать новый тип бигоки";
}

<h2>Создать новый тип биговки</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            <div class="col-md-10">
                Тип биговки
                @Html.EditorFor(model => model.TypeBigovki)
                @Html.ValidationMessageFor(model => model.TypeBigovki)
            </div>
        </div>

        <div class="form-group">
           <div class="col-md-10">
               Стоимость
                @Html.EditorFor(model => model.CostBigovki)
                @Html.ValidationMessageFor(model => model.CostBigovki)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Создать" class="btn btn-default" />
            </div>
        </div>
    </div>
}

