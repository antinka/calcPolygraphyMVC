@model calculator.Models.Faltsovka

@{
    ViewBag.Title = "Создать новый тип фальцовки ";
}

<h2>Создать новый тип фальовки</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
       
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
           <div class="col-md-10">
               Тип фальцовки
                @Html.EditorFor(model => model.TypeFaltsovki)
                @Html.ValidationMessageFor(model => model.TypeFaltsovki)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                Стоимость
                @Html.EditorFor(model => model.CostFaltsovki)
                @Html.ValidationMessageFor(model => model.CostFaltsovki)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Создать" class="btn btn-default" />
            </div>
        </div>
    </div>
}

