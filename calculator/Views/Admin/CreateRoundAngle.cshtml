@model calculator.Models.RoundAngle

@{
    ViewBag.Title = "Создать новый тип закругления углов";
}

<h2>Создать новый тип закругления углов</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
          <div class="col-md-10">
              Тип
                @Html.EditorFor(model => model.TypeRoundAngle)
                @Html.ValidationMessageFor(model => model.TypeRoundAngle)
            </div>
        </div>

        <div class="form-group">
            
            <div class="col-md-10">
                Стоимость
                @Html.EditorFor(model => model.CostRoundAngle)
                @Html.ValidationMessageFor(model => model.CostRoundAngle)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Создать" class="btn btn-default" />
            </div>
        </div>
    </div>
}

